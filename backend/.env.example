# Server Configuration
PORT=3000
NODE_ENV=development

# Database Configuration
DATABASE_URL=postgresql://atlasengine:password@localhost:5432/atlasengine
DB_HOST=localhost
DB_PORT=5432
DB_NAME=atlasengine
DB_USER=atlasengine
DB_PASSWORD=your_secure_password_here

# Redis Configuration (Build Queue)
REDIS_URL=redis://localhost:6379
REDIS_HOST=localhost
REDIS_PORT=6379

# Authentication
JWT_SECRET=your_jwt_secret_here_generate_with_openssl_rand_base64_32
JWT_EXPIRES_IN=7d

# Anthropic API
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# Docker Configuration
DOCKER_SOCKET=/var/run/docker.sock
PROJECTS_DIR=/projects
DOCKER_NETWORK=atlasengine-internal

# Domain Configuration
DOMAIN=localhost
PREVIEW_DOMAIN_PATTERN=proj-{id}.localhost
ENABLE_SSL=false

# Container Limits (Default Quotas)
DEFAULT_CONTAINER_MEMORY=256m
DEFAULT_CONTAINER_CPU=0.25
DEFAULT_MAX_CONTAINERS=1

# Port Range for Preview Containers
PORT_RANGE_START=3001
PORT_RANGE_END=3100

# Rate Limiting
RATE_LIMIT_WINDOW_MS=3600000
RATE_LIMIT_MAX_REQUESTS=50

# Quota Defaults
DEFAULT_MONTHLY_TOKEN_LIMIT=1000000
DEFAULT_MONTHLY_COST_LIMIT=50
DEFAULT_REQUESTS_PER_HOUR=50

# Logging
LOG_LEVEL=info
LOG_FILE=./logs/app.log

# CORS
CORS_ORIGIN=http://localhost:5173

# Security
BCRYPT_ROUNDS=10
SESSION_SECRET=your_session_secret_here

# Feature Flags
ENABLE_AUTH=true
ENABLE_QUOTAS=true
ENABLE_RATE_LIMITING=true
